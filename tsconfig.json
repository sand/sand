{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "types": [
      "node",
      "three"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "rootDir": "src/",
    "outDir": "build/ts",
    "sourceMap": true,
    "target": "es6",
    "lib": ["es2015", "es2017", "es2019", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": false,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/lib/*"
  ],
  "include": [
    "src/**/*"
  ],
}